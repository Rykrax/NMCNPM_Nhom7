@{
    ViewData["Title"] = "Bán Hàng";
}

@section Styles {
    <!-- Nếu bạn muốn thêm CSS tùy chỉnh riêng cho trang này -->
}

<div class="row">
    <!-- Danh sách sản phẩm -->
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Danh Sách Sản Phẩm</span>
                <input type="text" class="form-control form-control-sm w-50" placeholder="Tìm kiếm sản phẩm..." />
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @{
                        var products = new[]
                        {
                    new { Name = "Coca Cola", Price = "12.000đ", Stock = "50" },
                    new { Name = "Pepsi", Price = "12.000đ", Stock = "45" },
                    new { Name = "Bánh mì", Price = "15.000đ", Stock = "30" },
                    new { Name = "Mì tôm Hảo Hảo", Price = "8.000đ", Stock = "60" },
                    new { Name = "Sữa tươi Vinamilk", Price = "10.000đ", Stock = "40" },
                    new { Name = "Kẹo mút Chupa Chups", Price = "5.000đ", Stock = "100" },
                    new { Name = "Bút bi Thiên Long", Price = "7.000đ", Stock = "80" },
                    new { Name = "Nước suối Aquafina", Price = "6.000đ", Stock = "70" }
                    };

                        foreach (var item in products)
                        {
                            <div class="col-md-3">
                                <div class="card h-100 text-center">
                                    <div class="card-body">
                                        <p class="fw-bold">@item.Name</p>
                                        <p>@item.Price</p>
                                        <p class="text-muted">Còn @item.Stock cái</p>
                                        <button class="btn btn-primary btn-sm">Thêm vào giỏ</button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Hóa đơn bán hàng -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Hóa Đơn Bán Hàng
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label>Khách Hàng</label>
                    <input type="text" class="form-control" placeholder="Nhập tên hoặc số điện thoại" />
                </div>
                <hr />
                <p>Tạm tính: <span class="float-end">0đ</span></p>
                <p>Giảm giá: <span class="float-end">0đ</span></p>
                <p>VAT (8%): <span class="float-end">0đ</span></p>
                <hr />
                <h5>Tổng cộng: <span class="float-end text-success">0đ</span></h5>
                <div class="d-grid gap-2 mt-3">
                    <button class="btn btn-success">Thanh Toán</button>
                    <button class="btn btn-danger">Hủy Đơn</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Thêm JS nếu cần -->
}
