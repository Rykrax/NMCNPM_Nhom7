<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Cửa Hàng Tiện Lợi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    @* <link href="~/css/custom.css" rel="stylesheet" /> *@
    <style>

    </style>
    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="d-flex" style="min-height: 100vh;">
        <!-- Sidebar -->
        <div class="text-white p-3" style="width: 310px; background-color: #1a365d;">
            <h5 class="mb-4 text-center">Cửa hàng MT Mart</h5>
            <ul class="nav flex-column">
                <li class="nav-item"><a href="/home" class="nav-link text-white">Bán Hàng</a></li>
                <li class="nav-item"><a href="/products" class="nav-link text-white">Quản Lý Sản Phẩm</a></li>
                <li class="nav-item"><a href="#" class="nav-link text-white">Quản Lý Khách Hàng</a></li>
                <li class="nav-item"><a href="#" class="nav-link text-white">Báo Cáo & Thống Kê</a></li>
                <li class="nav-item"><a href="#" class="nav-link text-white">Quản Lý Người Dùng</a></li>
                <li class="nav-item"><a href="#" class="nav-link text-white">Cài Đặt Hệ Thống</a></li>
            </ul>
        </div>

        <!-- Main content -->
        <div class="flex-grow-1 d-flex flex-column bg-light">
            <!-- Header -->
            <nav class="navbar navbar-expand navbar-light bg-white border-bottom px-4">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <span class="h5 mb-0">@ViewData["Title"]</span>
                    <div class="d-flex align-items-center">
                        <span class="badge bg-secondary me-2">AD</span>
                        <span class="fw-bold">Quản Trị Viên</span>
                    </div>
                </div>
            </nav>

            <!-- Main content body -->
            <main class="p-4 flex-grow-1">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
